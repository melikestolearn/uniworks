package main;

import gui.console.ConsoleGui;
import connection.Connector;
import console.ConsoleGears;

/** This is the base of the program.
 * Every part builds up here.
 */
public class Base {
	
	private String username = "root";
	
	private final Connector connector;

	private final ConsoleGears consoleGears;
	
	private ConsoleGui consoleGui;

	public Base() {
		//connector = new Connector(this, System.in);
		connector = null;
		consoleGears = new ConsoleGears(this);
		
		java.awt.EventQueue.invokeLater(new Runnable() {
			public void run() {
				consoleGui = new ConsoleGui(consoleGears);
			}
		});
	}
	/** Sets the Console gui.
	 * @param g The Console gui.
	 */
	public void regGui(ConsoleGui g) {
		consoleGui = g;
	}
	/** Prints a line on the console.
	 * Has the same effect as base.getConsoleGui.printAt
	 * @param output The String to display.
	 */
	public void printAtConsole(String output) {
		consoleGui.printAt(output, false);
	}
	/** Returns the Console
	 * 
	 * @return The Console.
	 */
	public ConsoleGears getConsole() {
		return consoleGears;
	}
	public Connector getConnector() {
		return connector;
	}

	
	public ConsoleGui getConsoleGui() {
		return consoleGui;
	}
	
	public String getUsername() {
		return username;
	}
}
