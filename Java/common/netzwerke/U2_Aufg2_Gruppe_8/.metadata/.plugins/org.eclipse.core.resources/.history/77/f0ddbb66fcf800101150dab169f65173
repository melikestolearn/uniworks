		BufferedReader br = new BufferedReader(new InputStreamReader(socket8082.getInputStream()));
		PrintWriter pw = new PrintWriter(socket80.getOutputStream());
		String str;
		while((str = br.readLine();)!=null){
			
		}
			
		
	}
	
	
}
